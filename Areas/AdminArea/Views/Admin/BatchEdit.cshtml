@model YG.AdminArea.ViewModels.AdminVMs.AdminBatchVM

<wt:form vm="@Model">
    <div style="margin-bottom:10px">@Model.Localizer["BatchEditConfirm"] </div>
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:combobox field="LinkedVM.OrganId" items="LinkedVM.AllOrgans"/>
<wt:combobox field="LinkedVM.IsValid" />
<wt:checkbox field="LinkedVM.SelectedUserRolesIDs" items="LinkedVM.AllUserRoless"/>
<wt:checkbox field="LinkedVM.SelectedUserGroupsIDs" items="LinkedVM.AllUserGroupss"/>
</wt:row>
    <wt:hidden field="Ids" />
    <wt:grid vm="ListVM" use-local-data="true" height="300"  hidden-checkbox="true" hidden-panel="true"/>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
